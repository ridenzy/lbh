{
  "name": "ridenzy/lbh",
  "description": "Lightweight blog helpers: SEO, content, and web utilities for PHP.",
  "type": "library",
  "license": "MIT",
  "keywords": ["seo", "blog", "helpers", "content", "php"],
  "homepage": "https://github.com/ridenzy/lbh",
  "authors": [
    {
      "name": "Ridenzy Null",
      "email": "ridenzy@gmail.com"
    }
  ],
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "phpstan/phpstan": "^1.11",
    "vimeo/psalm": "^5.26",
    "friendsofphp/php-cs-fixer": "^3.64"
  },
  "autoload": {
    "psr-4": {
      "loadBlogHelpers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "loadBlogHelpers\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "scripts": {
    "test": "phpunit --colors=always",
    "stan": "phpstan analyse src --level=max",
    "psalm": "psalm",
    "cs:fix": "php-cs-fixer fix --diff --ansi",
    "check": [
      "@cs:fix",
      "@stan",
      "@psalm",
      "@test"
    ]
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/ridenzy"
    }
  ]
}
